<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Activity background style. -->
    <style name="background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Text question layout style. -->
    <style name="text_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">@dimen/marginNormal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Question style. -->
    <style name="question">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">@dimen/marginSmall</item>
        <item name="android:textColor">@color/primaryLightText</item>
        <item name="android:textSize">@dimen/subheadSize</item>
    </style>

    <!-- Column answer layout style. -->
    <style name="answer_layout">
        <item name="android:layout_width">@dimen/nullDimension</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- EditText answer style. -->
    <style name="edit_text_answer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/marginSmall</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/primaryLightText</item>
        <item name="android:textColorHint">@color/hintLightText</item>
    </style>

    <!-- Checkable answer style. -->
    <style name="check_answer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryLightText</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <!-- Summary text style. -->
    <style name="summary_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryLightText</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
